<!DOCTYPE html>
<html>
  <head>
    <title>Pqrs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
     <!-- Dropdown Structure -->
      <ul id="dropdown1" class="dropdown-content">
        
      </ul>
      <nav>
        <div class="nav-wrapper blue">          
          <ul class="right hide-on-med-and-down">
            <li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
            <li><a href="#"><%= current_user.first_name %></a></li>
          </ul>
        </div>
      </nav>     
    <% end %> 

    </header>
    
    <main>
        
    <div class="container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
    <%= yield %>
    </div>
  </main>
    <footer class="page-footer blue darken-3">
        <div class="container">
          <div class="row">
            <div class="col s12 m6 l6">
              <h5> <i class="fas fa-universal-access"></i> Sistema PQRs</h5>
              <p style="font-weight: 200;"><big>Universidad del Magdalena</big></p>
            </div>
            <div class="col hide-on-small-only l2"></div>
    
          </div>
        </div>
        <div class="footer-copyright">
          <div class="container">
           <div class="row">
            <div class="col l6">
              <h5>Powered by:</h5>
                   <a class="grey-text text-lighten-2" href="https://github.com/ibanb04"><i class="fab fa-github fa-2x"></i> Ivan Bettin</a> <br>
                   <a class="grey-text text-lighten-2" href="https://github.com/jesusramosv"><i class="fab fa-github fa-2x"></i> Jesus Ramos</a>               
            </div>
          </div>
          </div>
        </div>
      </footer>
  </body>
 
</html>
