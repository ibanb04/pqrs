<p id="notice"><%= notice %></p>

<h1 class="center">Statuses</h1>

<table class="striped">
  <thead>
    <tr>
      <th class="center">Status description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td class="center"><%= status.status_description %></td>
        <td class="center"><%= link_to 'Editar', edit_status_path(status), class: 'waves-effect waves-light btn green' %></td>
        <td class="center"><%= link_to 'Eliminar', status, method: :delete, data: { confirm: 'Are you sure?' }, class: 'waves-effect waves-light btn red' %></td>
      </tr>
    <% end %>
    <%= link_to 'New Status', new_status_path, class: 'waves-effect waves-light btn cyan' %>
  </tbody>
</table>

<br>


