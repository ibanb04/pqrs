<div class="card">
  <div class="card hoverable" style="background-color: rgba(255,255,255,.15);" id="card-login">
<%= form_with(model: permission_role, local: true) do |form| %>
  <% if permission_role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(permission_role.errors.count, "error") %> prohibited this permission_role from being saved:</h2>

      <ul>
      <% permission_role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card-content grey lighten-4">
  <div class="field">
    <%= form.select "permission_id", Permission.all.collect {|x| [x.description, x.id]},{}, class: "multiple"%>
