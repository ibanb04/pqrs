<p id="notice"><%= notice %></p>

<h1 class="center">Permisos de Roles</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Permission</th>
      <th>Role</th>
      <th>Editar</th>
      <th>Eliminar</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permission_roles.each do |permission_role| %>
      <tr>
        <td class="center"><%= permission_role.permission.description %></td>
        <td class="center"><%= permission_role.role.name %></td>
        <td class="center"><%= link_to 'Editar', edit_permission_role_path(permission_role), class: 'waves-effect waves-light btn green' %></td>
        <td class="center"><%= link_to 'Eliminar', permission_role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'waves-effect waves-light btn red' %></td>
      </tr>
    <% end %>
    <%= link_to 'Nuevo Permiso de rol', new_permission_role_path, class: 'waves-effect waves-light btn cyan'  %>
  </tbody>
</table>

<br>


