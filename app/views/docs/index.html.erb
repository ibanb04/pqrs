<p id="notice"><%= notice %></p>

<h1>Docs</h1>

<table>
  <thead>
    <tr>
      <th class="center">Url</th>
      <th class="center">Editar</th>
      <th class="center">Eliminar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @docs.each do |doc| %>
      <tr>
        <td class="center"><%= doc.url %></td>
        <td class="center"><%= link_to 'Editar', edit_doc_path(doc), class: 'waves-effect waves-light btn green' %></td>
        <td class="center"><%= link_to 'Eliminar', doc, method: :delete, data: { confirm: 'Are you sure?' }, class: 'waves-effect waves-light btn red' %></td>
      </tr>
    <% end %>
    <%= link_to 'Nuevo Archivo', new_doc_path, class: 'waves-effect waves-light btn cyan' %>
  </tbody>
</table>

<br>


